<Type4Window>:
    name: "type4"

    time: time
    on_enter:
        root.start()
    GridLayout:
        size: root.width, root.height
        rows: 4
        BoxLayout:
            size_hint: 1, 0.5
            orientation: "horizontal"
            Label:
                id: time
                text: "POZOSTAŁY CZAS: \n00:30"
                background_color: 0, 1, 1, 1
                font_size: 40
                color: 41/255, 128/255, 185/255, 1.0
                halign: 'center'

            # Label:
            #     id: points
            #     text: "TWOJE PUNKTY: \n0"
            #     background_color: 0, 1, 0, 1
            #     font_size: 20
            #     color: 41/255, 128/255, 185/255, 1.0
            #     halign: 'center'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Dalej"
                    background_color: 0, 255/255, 0, 1
                    on_release:
                        app.root.current = "type5"
                        root.manager.transition.direction = "up"


        Label:
            size_hint: 1, 0.5
            id: task
            text: "ZADANIE: \n Zaznacz linię, w ktorej jest sprawdzana długość listy."
            halign: 'center'
            color: 41/255, 128/255, 185/255, 1.0
            font_size: 25

        BoxLayout:
            size_hint: 1, 2
            orientation: "vertical"

            BoxLayout:
                orientation: "horizontal"
                CheckBox:
                    id: lineA
                    group: "group"
                    text: "A"
                    on_active: root.answer = self.text
                Label:
                    text: "list = [1,2,3,4]"
                    halign: 'left'
                    color: 41/255, 128/255, 185/255, 1.0

            BoxLayout:
                orientation: "horizontal"
                CheckBox:
                    id: lineB
                    group: "group"
                    text: "B"
                    on_active: root.answer = self.text
                Label:
                    text: "list.append([5,6,7,8])"
                    halign: 'left'
                    color: 41/255, 128/255, 185/255, 1.0

            BoxLayout:
                orientation: "horizontal"
                CheckBox:
                    id: lineC
                    group: "group"
                    text: "C"
                    on_active: root.answer = self.text
                Label:
                    text: "print len(list)"
                    halign: 'left'
                    color: 41/255, 128/255, 185/255, 1.0
            BoxLayout:
                orientation: "horizontal"
                CheckBox:
                    id: lineD
                    text: "D"
                    group: "group"
                    on_active: root.answer = self.text
                Label:
                    text: "print(list)"
                    halign: 'left'
                    color: 41/255, 128/255, 185/255, 1.0

        BoxLayout:
            size_hint: 1, 0.5
            orientation: "horizontal"
            Button:
                text: "ZATWIERDŹ"
                background_color: 0, 1, 0, 1
                font_size: 25
                on_press: root.checkAnswer()

<Type5Window>:
    name: 'type5'
    on_enter: root.start1()

    video: video
    # points: points
    time: time
    confirm: confirm
    textA: textA
    textB: textB
    textC: textC
    taskText: taskText
    answerA: answerA
    answerB: answerB
    answerC: answerC

    GridLayout:
        rows: 4
        size: root.width, root.height
        BoxLayout:
            orientation: 'horizontal'
            # Label:
            #     id: points
            #     # pos_hint:{"x":-0.45,"y":0.48}
            #     text: "POINTS: 0"
            #     color: 41/255, 128/255, 185/255, 1.0

            Video:
                id: video
                source: "bubble_sort.gif"
                state: "play"
                keep_ratio: True
                allow_stretch: False
                size_hint: 1, 1
            Label:
                id: time
                # pos_hint:{"x": 0.47, "y":0.48}
                text: "00:30"
                color: 41/255, 128/255, 185/255, 1.0
                font_size: 40
        Label:
            id: taskText
            # pos_hint:{"x":-0.05,"y":0.1}
            text: "Zadanie: Na podstawie filmiku wybierz odpowiedź A, B, C.\nPrzedstawiona animacja obrazuje sortowanie:"
            color: 41/255, 128/255, 185/255, 1.0

        BoxLayout:
            orientation: "vertical"
            # size_hint: (1, 0.3)
            # pos_hint:{"y": 0.25, "x": -0.3}

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "A)"
                    # pos_hint:{"x": -0.33, "y":0}
                    color: 41/255, 128/255, 185/255, 1.0
                CheckBox:
                    id: answerA
                    group: "group"
                    text: "A"
                    on_active: root.answer = self.text
                Label:
                    id: textA
                    size_hint: 1.9, 1
                    text: "Sortowanie przez wstawianie"
                    # pos_hint:{"x": -0.15, "y":0}
                    color: 41/255, 128/255, 185/255, 1.0
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "B)"
                    # pos_hint:{"x": -0.33, "y":-0.1}
                    color: 41/255, 128/255, 185/255, 1.0
                CheckBox:
                    id: answerB
                    group: "group"
                    text: "B"
                    on_active: root.answer = self.text
                Label:
                    id: textB
                    size_hint: 1.9, 1
                    text: "Sortowanie bąbelkowe"
                    # pos_hint:{"x": -0.15, "y":-0.1}
                    color: 41/255, 128/255, 185/255, 1.0
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: "C)"
                    # pos_hint:{"x": -0.33, "y":-0.2}
                    color: 41/255, 128/255, 185/255, 1.0
                CheckBox:
                    id: answerC
                    group: "group"
                    text: "C"
                    on_active: root.answer = self.text
                Label:
                    id: textC
                    size_hint: 1.9, 1
                    text: "Sortowanie przez scalanie"
                    # pos_hint:{"x": -0.15, "y":-0.2}
                    color: 41/255, 128/255, 185/255, 1.0
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: confirm
                # size_hint: None, None
                # size: 75, 50
                # pos_hint: {"x": 0.47, "y": 0.1}
                text: "Następne"
                on_press: root.update(video)
            Button:
                text: "Dalej"
                background_color: 0, 255/255, 0, 1
                on_release:
                    app.root.current = "type6"
                    root.manager.transition.direction = "up"

