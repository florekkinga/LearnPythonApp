<Type7Window>:
    name: "type7"
    on_enter: root.build()
    time: time
    input: input
    confirm: confirm

    GridLayout:
        rows: 5
        size: root.width, root.height
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1
            Label:
                id: time
                text: "00:30"
                color: 41/255, 128/255, 185/255, 1.0
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: confirm
                    text: "Sprawdź"
                    on_press: root.checkAnswer()
                Button:
                    text: "Dalej"
                    background_color: 0, 255/255, 0, 1
                    on_release:
                        app.root.current = "summary"
                        root.manager.transition.direction = "up"
        BoxLayout:
            orientation: "vertical"
            Label:
                text: "ZADANIE: \n W jakiej kolejnosci powinien wykonac sie kod?"
                halign: 'center'
                color: 41/255, 128/255, 185/255, 1.0
                font_size: 23

            Label:
                text: "1. less = []\n2.    greater = []\n3.def sort(array=[12,4,5,6,7,3,1,15]):\n4.        pivot = array[0]\n5.    equal = []\n6.    if len(array) > 1:\n7.                less.append(x)\n8.        for x in array:\n9.           if x < pivot:\n10.                equal.append(x)\n11.            elif x > pivot:\n12.            elif x == pivot:\n13.                greater.append(x)\n14.    else:\n15.        return sort(less)+equal+sort(greater)\n16.        return array"
                font_size: 15
                color: 41/255, 128/255, 185/255, 1.0
                size_hint: 1, 2

            TextInput:
                id: input
                size_hint: 1, 0.5
                multiline: False


