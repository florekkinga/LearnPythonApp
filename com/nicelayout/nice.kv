<Home>:
    name: "home"

    FloatLayout:
        Label:
            text: "LearnPythonApp"
            pos_hint: {'x': 0, 'y':0.45}
            font_size: 50
            color: 41/255, 128/255, 185/255, 1.0

        ImageButton:
            pos_hint: {'x':0.1, 'y':0 }
            size_hint_x: 0.2
            allow_stretch: True
            source: "szybkagra.png"
